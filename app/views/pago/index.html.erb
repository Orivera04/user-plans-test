<% content_for :title do %>
  Pagos
<% end %>

<div class="col-lg-12 col-12">
   <div class="row">
      <div class="col-lg-6 text-right mt-3">
         <%= link_to "Crear Recurso", new_pago_path, class: "btn btn-secondary" %>
      </div>
   </div>
</div>

<div class="container-fluid mt-3">
   <div class="row">
      <div class="col pl-0 pr-0">
         <div class="card">
            <div class="card-header">
               <h3 class="mb-0">Pagos registrados</h3>
            </div>
            <div class="table-responsive">
               <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                     <tr>
                        <th>Usuario</th>
                        <th>Monto Pagado</th>
                        <th>Fecha Creaci√≥n</th>
                        <th>Ver</th>
                     </tr>
                  </thead>
                  <tbody class="list">
                    <% @records.each do |pagado| %>
                     <tr>
                        <td><%= pagado.user.display_name %></td>
                        <td><%= pagado.monto_usd %></td>
                        <td><%= pagado.created_at %></td>
                        <td>
                           <%= link_to pago_path(pagado), class: "btn btn-icon btn-primary" do %>
                              Ver
                           <% end %>
                        </td>
                     </tr>
                    <% end %>
                  </tbody>
               </table>
            </div>
            <div class="card-footer py-4">
             <%= paginate @records %>
             <%= page_entries_info @records %>
            </div>
         </div>
      </div>
   </div>
</div>