<% content_for :title do %>
  Planes
<% end %>

<div class="col-lg-12 col-12">
   <div class="row">
      <div class="col-lg-6 text-right mt-3">
         <%= link_to "Crear Recurso", new_plan_path, class: "btn btn-secondary" %>
      </div>
   </div>
</div>

<div class="container-fluid mt-3">
   <div class="row">
      <div class="col pl-0 pr-0">
         <div class="card">
            <div class="card-header">
               <h3 class="mb-0">Planes registrados</h3>
            </div>
            <div class="table-responsive">
               <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                     <tr>
                        <th>Nombre</th>
                        <th>Porcentaje Comsi√≥n</th>
                        <th>Creado El</th>
                        <th>Actualizado El</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                     </tr>
                  </thead>
                  <tbody class="list">
                    <% @records.each do |plan| %>
                     <tr>
                        <td><%= plan.nombre %></td>
                        <td><%= plan.porcentaje_comision %></td>
                        <td><%= plan.created_at %></td>
                        <td><%= plan.updated_at %></td>
                        <td>
                           <%= link_to edit_plan_path(plan), class: "btn btn-icon btn-primary" do %>
                              Editar
                           <% end %>
                        </td>
                        <td>
                           <%= link_to plan_path(plan), class: "btn btn-icon btn-danger", method: :delete do %>
                              Eliminar
                           <% end %>
                        </td>
                     </tr>
                    <% end %>
                  </tbody>
               </table>
            </div>
            <div class="card-footer py-4">
             <%= paginate @records %>
             <%= page_entries_info @records %>
            </div>
         </div>
      </div>
   </div>
</div>